<h2>Sign Up</h2>


<%= form_for(@user, url: signup_path) do |f| %>

    
    <br>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <br>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <br>

    <%= f.submit "Create Account"%>
<% end %>

<%= link_to 'Back', users_path %>
